<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.interactivitydemo.TicTacToeActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:background="@drawable/board"
        app:columnCount="3"
        app:rowCount="3">

        <ImageView
            android:id="@+id/redImageView01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="0"
            app:layout_row="0"
            android:onClick="dropIn" />
        <ImageView
            android:id="@+id/redImageView02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="dropIn" />
        <ImageView
            android:id="@+id/redImageView03"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="2"
            app:layout_row="0"
            android:onClick="dropIn" />
        <ImageView
            android:id="@+id/redImageView04"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="dropIn" />
        <ImageView
            android:id="@+id/redImageView05"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="dropIn" />
        <ImageView
            android:id="@+id/redImageView06"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="dropIn" />
        <ImageView
            android:id="@+id/redImageView07"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="dropIn" />

        <ImageView
            android:id="@+id/redImageView08"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:onClick="dropIn"
            app:layout_column="1"
            app:layout_row="2" />
        <ImageView
            android:id="@+id/redImageView09"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="dropIn" />
    </androidx.gridlayout.widget.GridLayout>
</GridLayout>